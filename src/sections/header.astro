          M
        </div>
        <span class="text-xl font-bold tracking-tight dark:text-white"
          >MarcosToledo</span
        >
      </div>
      <div class="hidden md:flex items-center space-x-8">
        {
          linksMap.map(({ label, href }) => (
            <a
              class="text-sm font-medium hover:text-primary transition-colors"
              href={href}
            >
              {label}
            </a>
          ))
        }

        <button
          class="bg-primary hover:bg-primary/90 text-white px-5 py-2 rounded-lg text-sm font-semibold transition-all shadow-lg shadow-primary/20"
          onclick={`window.open('${CV}')`}
        >
          Download CV
