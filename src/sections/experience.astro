const experienceMap = [
  {
    period: "set de 2021 — fev de 2026",
    regime: "Remoto",
    responsibility: "Front-End",
    company: "Onze Corretora de Seguros LTDA",
    tasks: [
      "Trabalhei criando soluções novas, dando manutenção e atendendo emergências (como orientações e correções de bugs)",
    ],
  },
  {
    period: "jan de 2020 — set de 2021",
    regime: "Remoto",
    responsibility: "Front-End",
    company: "mLabs - Plataforma de Gestão de Redes Sociais",
    tasks: [
      "Entrei para compor o time de ads para evoluir a ferramenta que se conectava com a rede social Facebook. Foi onde tive contato com EmberJs",
    ],
  },
  {
    period: "abr de 2019 — dez de 2019",
    regime: "Presencial",
    responsibility: "Front-End",
    company: "GSW Soluções Integradas",
    tasks: [
      "Atuei em uns dos clientes da GSW, era consultor na Embraer, tendo o meu primeiro contato com ReactJs. Onde estávamos começando a refazer o Front-End que lidava com faturas",
    ],
  },
  {
    period: "mar de 2018 — abr de 2019",
    regime: "Presencial",
    responsibility: "Front-End",
    company: "Mult-e Engenharia de Software",
    tasks: [
      "Atuei em uns dos clientes da Mult-e, era consultor na Embraer. Trabalhei com um time de design criando telas promocionais/notícias que rodavam na intranet",
    ],
  },
  {
    period: "set de 2014 — fev de 2018",
    regime: "Presencial",
    responsibility: "Front-End",
    company: "CSS4HTML",
    tasks: [
      "Trabalhei em diversos projetos, criando layout de campanhas para algumas marcas do mercado e agências",
      "Criação de Front-Ends dentro de Ruby On Rails, com HTML, CSS e jQuery",
    ],
  },
];
---

<section
  class="py-20 border-t border-slate-200 dark:border-neutral-border"
  id="experience"
>
  <div class="text-center mb-16">
    <h2 class="text-3xl lg:text-4xl font-bold mb-4">Professional Experience</h2>
    <div class="h-1 w-20 bg-primary mx-auto rounded-full"></div>
  </div>
  <div class="max-w-4xl mx-auto space-y-12">
    {
      experienceMap.map(
        ({ period, regime, responsibility, company, tasks }) => (
          <div class="flex flex-col md:flex-row gap-8 relative">
            <div class="md:w-1/4 pt-1">
              <span class="text-primary font-bold text-lg">{period}</span>
              <p class="text-sm text-slate-500 uppercase tracking-widest mt-1">
                {regime}
              </p>
            </div>
            <div class="md:w-3/4 pb-12 border-l-2 border-slate-200 dark:border-neutral-border pl-8 relative">
              <div class="absolute -left-[9px] top-2 w-4 h-4 rounded-full bg-primary ring-4 ring-primary/20" />
              <h3 class="text-xl font-bold text-slate-900 dark:text-white">
                {responsibility}
              </h3>
              <p class="text-lg font-medium text-slate-700 dark:text-slate-300 mb-4">
                {company}
              </p>
              <ul class="space-y-3 text-slate-600 dark:text-slate-400 leading-relaxed list-disc ml-4">
                {tasks.map((task) => (
                  <li>{task}</li>
                ))}
              </ul>
            </div>
          </div>
        ),
      )
    }
  </div>
</section>
