---
import { Icon } from "astro-icon/components";
import ProfileImg from "../../public/assets/images/Captura de tela de 2026-02-22 14-48-54.png";

const projectsMap = [
  {
    imageUrl: ProfileImg.src,
    links: [
      { icon: "link", link: "#" },
      { icon: "code", link: "https://github.com/Marcos-Toledo/profile" },
    ],
    tags: ["AstroJs"],
    name: "Meu perfil profissional",
    description: "Objetivo de mostrar e falar sobre a minha pessoa.",
  },
];
---

<section
  class="py-20 border-t border-slate-200 dark:border-neutral-border"
  id="projects"
>
  <div class="flex flex-col md:flex-row justify-between mb-16 gap-4">
    <div class="text-left">
      <h2 class="text-3xl lg:text-4xl font-bold mb-4">Trabalho em destaque</h2>
      <div class="h-1 w-20 bg-primary rounded-full"></div>
    </div>
    <p class="text-slate-600 dark:text-slate-400 max-w-sm">
      Uma seleção de projetos que demonstram minhas habilidades técnicas e minha
      visão arquitetônica.
    </p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Project 1 -->
    {
      projectsMap.map(({ imageUrl, links, tags, name, description }) => (
        <div class="group bg-white dark:bg-neutral-dark rounded-2xl overflow-hidden border border-slate-200 dark:border-neutral-border hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="aspect-video relative overflow-hidden">
            <img
              alt="SaaS Analytics Dashboard Project"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              data-alt="Modern minimalist SaaS analytics dashboard interface with dark theme"
              src={imageUrl}
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-6 opacity-0 group-hover:opacity-100 transition-opacity">
              <div class="flex gap-3">
                {links.map(({ icon, link }) => (
                  <a
                    class="p-2 bg-white rounded-full text-black hover:bg-primary hover:text-white transition-colors"
                    href={link}
                    target="_blank"
                  >
                    <Icon name={`material-symbols:${icon}`} size="24" />
                  </a>
                ))}
              </div>
            </div>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex gap-2">
              {tags.map((tag) => (
                <span class="text-[10px] font-bold py-1 px-2 rounded bg-primary/10 text-primary border border-primary/20 uppercase tracking-tighter">
                  {tag}
                </span>
              ))}
            </div>
            <h3 class="text-xl font-bold">{name}</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">
              {description}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</section>
