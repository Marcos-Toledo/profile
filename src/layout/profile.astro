---
import "../styles/global.css";
import Header from "../sections/header.astro";
import Footer from "../sections/footer.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "profile";
  noindex?: boolean;
}

const {
  title = "Marcos Toledo — Desenvolvedor Front-End",
  description = "Desenvolvedor Front-End focado em aplicações web. Experiência com React, Ember, jQuery e Ruby on Rails. Código limpo e experiências de usuário excepcionais.",
  image = "https://avatars.githubusercontent.com/u/13186981?v=4",
  type = "profile",
  noindex = false,
} = Astro.props;

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site ?? Astro.url.origin,
);
const imageURL = image.startsWith("http")
  ? image
  : new URL(image, canonicalURL.origin).href;
---

<html lang="pt-BR" class="dark scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO básico -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="robots"
      content={noindex ? "noindex, nofollow" : "index, follow"}
    />
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph (Facebook, LinkedIn, etc.) -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:locale" content="pt_BR" />
    <meta property="og:site_name" content="Marcos Toledo" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />

    <!-- Dados estruturados (JSON-LD) para motores de busca -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: "Marcos Toledo",
        url: canonicalURL.href,
        image: imageURL,
        jobTitle: "Desenvolvedor Front-End",
        description: description,
        knowsAbout: [
          "React",
          "JavaScript",
          "Front-End",
          "Ember.js",
          "Ruby on Rails",
          "jQuery",
        ],
      })}
    />
  </head>
  <body
    class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 antialiased"
  >
    <Header />
    <main id="main-wrapper" class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
